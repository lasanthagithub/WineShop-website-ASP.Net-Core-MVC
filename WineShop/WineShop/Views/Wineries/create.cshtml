@model Winery

<h2>Create</h2>
<form asp-action="Create" asp-controller="Wineries">
    <div class="form-horizontal">
        <h4>Winery</h4><hr />
        <div asp-validation-summary="ModelOnly" cass="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <input asp-for="Name" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="col-md-2 control-label"></label>
            <select asp-for="Country" asp-items="@Html.GetEnumSelectList<Country>()" class="form-control"></select>
        </div>
    </div>
</form>