@model IEnumerable<Winery>

@{ 
    ViewData["Totle"] = "Wineries";
}

<h2>Wineries Overview</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(Model => Model.Name)</th>
        <th>@Html.DisplayNameFor(Model => Model.Country)</th>
        <th></th>
    </tr>

    @foreach (Winery winery in Model)
    {
    <tr>
        <td>@Html.DisplayFor(Model => winery.Name)</td>
        <td>@Html.DisplayFor(Model => winery.Country)</td>
        <td>
            <a asp-action="Edit" asp-route-id="@winery.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@winery.Id">Delete</a>
        </td>
    </tr> 
    }
</table>