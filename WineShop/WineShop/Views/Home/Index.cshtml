@{ 
    ViewData["Title"] = "Home";
}

<style>
    .glyphicon
    {
        font-size:4em;
    }
</style>

<div class="row text-center">
    <hi style="font-size:4em">Classy Wines</hi><hr />
    <p class="text-muted">Come check out our catelogue of fine wines</p>
    <a asp-action="Shop" asp-controller="Wines" class="btn btn-primary btn-lg">Brouse our catelogue.</a> 

</div>

<div class="container-fluid">
    <section id="About">
        <div class="row">

            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                @*<span class="glyphicon glyphicon-glass text-primary"></span>*@
                <i class="fa fa-4x fa-glass text-primary"></i>
                <h3>Exclusive Wines</h3>
                <p>We offer only exclusive wines</p>

            </div>

            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                @*<span class="glyphicon glyphicon-plane text-primary"></span>*@
                <i class="fa fa-4x fa-plane text-primary"></i>
                <h3>Ready to Ship</h3>
                <p>We ship all over the world</p>

            </div>

            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                @*<span class="glyphicon glyphicon-phone text-primary"></span>*@
                <i class="fa fa-4x fa-phone text-primary"></i>
                <h3>Mobile Friendly</h3>
                <p>This site can even visible in your mobile devices</p>

            </div>

            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                @*<span class="glyphicon glyphicon-heart text-primary"></span>*@
                <i class="fa fa-4x fa-heart text-primary"></i>
                <h3>Made with love</h3>
                <p>...Fruits! Vegies! Mostly grapes..!!!</p>

            </div>

        </div>
    </section>
    <section id="portfolio">
        @await  Html.PartialAsync("_indexPartial")
    </section>
    <section id="contact">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <h2>Let's have a fun with wines!</h2>
                <hr />
                <p>Please give us a call and order our fine wine!!</p>
            </div>

            <div class="col-md-4 col-md-offset-2 text-center" >
                <span class="glyphicon glyphicon-phone"></span>
                <p> 255 - 255 - 2555</p>
            </div>

            <div class="col-md-4 col-md-offset-2">
                <span class="glyphicon glyphicon-envelope"></span>
                <p><a href="mailto:emailaddress@domain.com">eamiladdress@domain.com</a></p>

            </div>

        </div>
    </section>

</div>